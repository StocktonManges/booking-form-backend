generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id                Int        @id @default(autoincrement())
  email             String
  parentName        String
  phoneNumber       String
  dateTime          DateTime
  addressId         Int
  address           Address    @relation(fields: [addressId], references: [id])
  outdoors          Boolean
  packageId         Int
  package           Package    @relation(fields: [packageId], references: [id])
  participants      Int
  minParticipantAge Int
  maxParticipantAge Int
  birthdayChildName String
  birthdayChildAge  Int
  firstInteraction  Boolean
  notes             String?
  couponCode        String?
  referralCode      String?
  howDidYouFindUs   String
  charactersAtEvent CharactersAtEvent[]
  activitiesForEvent ActivitiesForEvent[]
  statusId          Int
  status            Status    @relation(fields: [statusId], references: [id])
}

model Address {
  id       Int    @id @default(autoincrement())
  street   String
  city     String
  state    String
  events   Event[]
}

model Character {
  id                 Int                @id @default(autoincrement())
  name               String             @unique()
  isActive           Boolean            @default(true)
  charactersAtEvent  CharactersAtEvent[]
}

model Package {
  id                    Int     @id @default(autoincrement())
  name                  String
  activityCount         Int
  events                Event[]
  incompatiblePackages  IncompatibleActivitiesAndPackages[]
}

model Activity {
  id                   Int                @id @default(autoincrement())
  name                 String             @unique
  isActive             Boolean            @default(true)
  activitiesForEvent   ActivitiesForEvent[]
  incompatiblePackages IncompatibleActivitiesAndPackages[]
}

model IncompatibleActivitiesAndPackages {
  id         Int      @id @default(autoincrement())
  activityId Int
  packageId  Int
  activity   Activity @relation(fields: [activityId], references: [id])
  package    Package  @relation(fields: [packageId], references: [id])

  @@unique([activityId, packageId])
}

model CharactersAtEvent {
  id          Int       @id @default(autoincrement())
  characterId Int
  eventId     Int
  character   Character  @relation(fields: [characterId], references: [id])
  event       Event      @relation(fields: [eventId], references: [id])

  @@unique([characterId, eventId])
}

model ActivitiesForEvent {
  id         Int       @id @default(autoincrement())
  activityId Int
  eventId    Int
  activity   Activity  @relation(fields: [activityId], references: [id])
  event      Event     @relation(fields: [eventId], references: [id])

  @@unique([activityId, eventId])
}

model Status {
  id                   Int                @id @default(autoincrement())
  name                 String
  events Event[]
}
